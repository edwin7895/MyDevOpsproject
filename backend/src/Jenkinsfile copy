pipeline {
    agent any

    environment {
        GO_ENV = "${WORKSPACE}/go_env"
        DOCKER_IMAGE = "edwin789/backend-go:latest"
        DOCKER_CREDENTIALS_ID = "docker-hub-credentials"
        SONAR_SCANNER_HOME = tool 'SonarQube Scanner' // Ajusta con el nombre correcto de tu instalación de SonarQube Scanner en Jenkins
        SONAR_HOST_URL = 'http://<tu_sonarqube_host>'  // Reemplaza con la URL de tu servidor de SonarQube
        SONAR_LOGIN = credentials('sonar-token')  // Asume que has configurado un token de SonarQube en Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'feature-ci-cid-backend', url: 'https://github.com/edwin7895/MyDevOpsproject.git'
            }
        }

        stage('Set up Go Environment') {
            steps {
                sh 'mkdir -p ${GO_ENV}/bin && export GOPATH=${GO_ENV}'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend/src') {
                    sh 'go mod tidy'
                }
            }
        }

        stage('Linting') {
            steps {
                script {
                    catchError(buildResult: 'SUCCESS', stageResult: 'UNSTABLE') {
                        sh 'go vet ./...'
                    }
                }
            }
        }

        stage('Unit Tests') {
            steps {
                sh 'go test -v ./... -coverprofile=coverage.out'
            }
        }

        stage('Coverage Report') {
            steps {
                sh 'go tool cover -func=coverage.out'
            }
        }

        // Nuevo stage para SonarQube
        stage('SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv('SonarQube') {  // Configuración de SonarQube en Jenkins
                        sh "${SONAR_SCANNER_HOME}/bin/sonar-scanner \
                            -Dsonar.projectKey=backend-go \
                            -Dsonar.sources=backend/src \
                            -Dsonar.host.url=${SONAR_HOST_URL} \
                            -Dsonar.login=${SONAR_LOGIN} \
                            -Dsonar.go.coverage.reportPaths=coverage.out"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t ${DOCKER_IMAGE} backend/src'
                }
            }
        }

        stage('Push Docker Image') {
            when {
                branch 'main'
            }
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIALS_ID}", passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                        sh 'docker push ${DOCKER_IMAGE}'
                        sh 'docker logout'
                    }
                }
            }
        }

        stage('Post-build') {
            steps {
                echo 'Build, Test, Docker Image creation, and Push to Docker Hub completed'
                sh 'docker image prune -f'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        failure {
            echo 'Pipeline failed. Check the logs.'
        }
    }
}
